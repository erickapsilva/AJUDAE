<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundFragment"
    tools:context=".navigation.fragments.ProfileFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/shadow_edit_text" />
        <ImageView
            android:id="@+id/imgBackgroundAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            app:srcCompat="@drawable/round_shape_shadow" />

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/imgBackgroundAvatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            app:srcCompat="@drawable/avatar_example" />

        <TextView
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/txtUserNameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgBackgroundAvatar"
            android:layout_centerHorizontal="true"
            android:text="User" />

        <TextView
            android:textSize="12dp"
            android:textColor="@color/lightGray"
            android:id="@+id/txtGraduationProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUserNameProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="Graduation" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView5"
            android:layout_alignStart="@+id/imageView5"
            android:layout_below="@+id/imageView5"
            android:text="CADEIRAS CURSANDO" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="16dp"
            android:scrollbars="horizontal" />

    </RelativeLayout>
</FrameLayout>
