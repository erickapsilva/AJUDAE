<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context="com.app.armetech.ajudae.user.gui.SelectHelpSubjectActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/round_header"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:textColor="#fff"
        android:textSize="18dp"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/quero_ajudar" />

    <TextView
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:padding="5dp"
        android:id="@+id/textView7"
        android:textColor="@color/darkBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:textAlignment="center"
        android:text="@string/busque_selecione_cadeiras" />

    <TextView
        android:layout_marginLeft="4dp"
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText001"
        android:layout_alignStart="@+id/editText001"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="18dp"
        android:text="@string/busque_uma_cadeira"
        android:textColor="@color/colorPrimary" />

    <AutoCompleteTextView
        android:paddingRight="16dp"
        android:drawableRight="@drawable/ic_android_search"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/editText001"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/textView11"
        android:layout_toEndOf="@+id/gridLayout"
        android:layout_toRightOf="@+id/gridLayout"
        android:background="@drawable/shadow_edit_text"
        android:hint="@string/buscar_reticencias"
        android:paddingLeft="25dp"
        android:textAlignment="inherit"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="@color/lightGray"
        android:textColorLink="@color/colorPrimary"
        android:textSize="15dp" />

    <Button
        android:layout_marginTop="3dp"
        android:id="@+id/btnAddSubject"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:layout_alignEnd="@+id/editText001"
        android:layout_alignRight="@+id/editText001"
        android:layout_alignTop="@+id/editText001"
        android:background="@color/colorAccent"
        android:onClick="pressButton"
        android:text="@string/add"
        android:textColor="#fff"
        android:theme="@style/AppTheme.WhiteRipple" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText001"
        android:layout_alignStart="@+id/editText001"
        android:layout_below="@+id/editText001"
        android:layout_marginTop="14dp"
        android:paddingLeft="10dp"
        android:text="@string/cadeiras_selecionadas"
        android:textColor="@color/colorPrimary" />

    <GridLayout
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_below="@id/textView10"
        android:layout_above="@+id/btnEnter"
        android:layout_height="700dp"
        android:layout_gravity="center"

        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        tools:context="com.app.armetech.ajudae.user.gui.SelectHelpSubjectActivity"
        android:id="@+id/gridLayout">

    </GridLayout>

    <Button
        android:id="@+id/btnEnter"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/round_button_red"
        android:text="@string/finalizar"
        android:onClick="goToNewsFeedScreen"
        android:textColor="#fff"
        android:theme="@style/AppTheme.WhiteRipple" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewHelp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/gridLayout"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="25dp"></android.support.v7.widget.RecyclerView>


</RelativeLayout>
