<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context="com.app.armetech.ajudae.user.gui.ScheduleAvaActivity">
    <GridLayout
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="70dp"
        android:paddingBottom="50dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#eeeeee"
        tools:context="com.app.armetech.ajudae.user.gui.ScheduleAvaActivity">

        <android.support.v7.widget.RecyclerView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_below="@+id/txtViewCourse"
            android:id="@+id/recyclerView"
            >
        </android.support.v7.widget.RecyclerView>

    </GridLayout>

    <TextView
        android:id="@+id/txtViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:textColor="@color/darkBlue"/>

    <TextView
        android:textAlignment="center"
        android:textColor="@color/darkBlue"
        android:id="@+id/txtViewCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:id="@+id/btnContinuar"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:textColor="#fff"
        android:onClick="goToHelpSubjectsScreen"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/round_button_red"
        android:text="CONTINUAR"
        tools:ignore="OnClick" />

    <ImageView
        android:id="@+id/imageView12"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/headerscheduleava" />


</RelativeLayout>
