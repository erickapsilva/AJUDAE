<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundFragment"
    tools:context="com.app.armetech.ajudae.user.gui.AddQuestionActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/round_header" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtTextQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Pergunte"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <EditText
        android:layout_marginRight="8dp"
        android:id="@+id/edtTextQuestion"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignLeft="@+id/edtTextQuestionResume"
        android:layout_alignStart="@+id/edtTextQuestionResume"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="75dp"
        android:background="@drawable/shadow_edit_text"
        android:drawableLeft="@mipmap/ic_primary_academic_cap"
        android:drawablePadding="13dp"
        android:hint="Sua pergunta..."
        android:paddingLeft="15dp"
        android:paddingRight="16dp"
        android:textAlignment="inherit"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="@color/lightGray"
        android:textColorLink="@color/colorPrimary"
        android:textSize="15dp" />

    <EditText
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/edtTextQuestionResume"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/edtTextQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/shadow_edit_text"
        android:drawableLeft="@mipmap/ic_primary_academic_cap"
        android:drawablePadding="13dp"
        android:hint="Resumo sobre ela..."
        android:paddingLeft="15dp"
        android:paddingRight="16dp"
        android:textAlignment="inherit"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="@color/lightGray"
        android:textColorLink="@color/colorPrimary"
        android:textSize="15dp" />



    <Button
        android:id="@+id/btnEnter"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:onClick="sendQuestion"
        android:background="@drawable/round_button_red"
        android:text="ENVIAR"
        android:textColor="#fff"
        android:theme="@style/AppTheme.WhiteRipple" />


    <EditText
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/edtTextTag"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edtTextQuestionResume"
        android:layout_marginTop="8dp"
        android:background="@drawable/shadow_edit_text"
        android:drawableLeft="@mipmap/ic_tag"
        android:drawablePadding="13dp"
        android:hint="Tags (separe por vírgula)..."
        android:paddingLeft="15dp"
        android:paddingRight="16dp"
        android:textAlignment="inherit"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="@color/lightGray"
        android:textColorLink="@color/colorPrimary"
        android:textSize="15dp" />

    <TextView
        android:textSize="20sp"
        android:textColor="@color/darkBlue"
        android:textAlignment="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="E aí, qual a dúvida?" />
</RelativeLayout>
